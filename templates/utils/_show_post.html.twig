<div class="row mb-3 text-center d-flex justify-content-start">
    {% for post in posts %}
        <div class="col-lg-4 col-md-12 mt-md-1">
            <div class="card mb-4 rounded-3 shadow-sm h-100">
                <div class="card-header py-3">
                    {% if not is_granted('ROLE_ADMIN') %}
                        <span class="m-0 badge badge-pill alert-dark">Auteur : {{ post.user.getFullName }}</span>
                    {% else %}
                        <span class="m-0 badge badge-pill alert-dark"> {{ post.isActive ? 'Visible' : 'Invisible' }}</span>
                        <span class="m-0 badge badge-pill alert-dark">Auteur : Moi </span>
                    {% endif %}</p>
                        <span class="m-0 badge badge-pill alert-info">Catégorie : {{ post.category.name }}</span>
                        <h3 class="text-center"><span class="fw-bold">{{ post.title }}</span></h3>
                </div>
                <div class="card-body {{ post.isActive ? '' : 'bg-warning' }}">
                    <p class="m-0 text-start">{{ post.content|length > 50 ? post.content|slice (0, 60) ~ '...' : post.content }}</p>
                    {% if  is_granted('ROLE_ADMIN') %}
                        <a class="mt-4 btn btn-outline-primary w-100" href="{{ path('admin_edit_post', {'id': post.id}) }}">Modifier</a>
                    {% else %}
                        <a class="mt-4 btn btn-outline-primary w-100" href="{{ path('site_show_post', {'id': post.id}) }}">Voir</a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-lg-4 col-md-12 mt-md-4">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3">
                    <h3 class="my-0 fw-normal text-center">Aucun post à afficher</h3>
                </div>
                {% if  is_granted('ROLE_ADMIN') %}
                    <div class="card-body text-center">
                        <a href="{{ path('admin_add_post') }}">Créer un nouveau post</a>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endfor %}
</div>